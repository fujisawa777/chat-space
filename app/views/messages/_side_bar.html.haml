.side-bar
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__edit-user
        = link_to new_group_path, class: "side-header__box__menu__btn" do
          = icon('far', 'edit')
        %li.side-header__box__menu__config
        = link_to edit_user_path(current_user), class: "side-header__box__menu__btn" do
          = icon('fas', 'cog')

  .side-groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group),class:"group__link" do
          .group__group-name
            = group.name
          .group__message
            = group.show_last_message